package com.simplilearn.typecasting;
import java.util.Scanner;
public class Ex1 {

	public static void main(String[] args) {
		// WAP to take user input as int value and convert 
		// into float, double and byte.
		System.out.println("Enter an integer for conversion");
				Scanner s= new Scanner(System.in);
				int intinput=s.nextInt();
				float floatval=intinput;
				double doubleval=intinput;
				byte byteval=(byte)intinput;
				
				System.out.println("Float value converted from int "+ floatval);
				System.out.println("double value converted from int "+ doubleval);
				System.out.println("byte value converted from int "+ byteval);
				 

	}

}
